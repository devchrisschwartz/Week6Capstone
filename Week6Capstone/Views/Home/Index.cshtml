@{
    ViewBag.Title = "Home Page";
}


<h2>Task List</h2>

<form action="/Home/AddTask">
	<button class="btn btn-info"><span class="glyphicon glyphicon-plus"></span> Add New Task</button>
</form>
<br />
<table border="1" class="table">
	<tr>
		<th>Task ID</th>
		<th>Description</th>
		<th>Due Date</th>
		<th>Task Is Complete</th>
		<th>Complete Task</th>
		<th>Delete Task</th>
	</tr>

	@foreach (var task in ViewBag.Tasks)
	{
		<tr>
			<td>@task.taskid</td>
			<td>@task.description</td>
			<td>@task.duedate.ToShortDateString()</td>
			<td>@task.status</td>
			<td>
				<form action="/Home/CompleteTask">
					<input type="hidden" name="taskid" value="@task.taskid" />
					<button class="btn btn-success" type="submit"><span class="glyphicon glyphicon-check"></span> Change Task Status</button>
				</form>
			</td>
			<td>
				<form action="/Home/DeleteTask">
					<input type="hidden" name="taskid" value="@task.taskid" />
					<button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this?')">
					<span class="glyphicon glyphicon-exclamation-sign"></span> Delete Task</button>
				</form>
			</td>
		</tr>
	}
</table>